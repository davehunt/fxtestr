{% extends "failures.json" %}
{% set schema = "unittest" %}
{% block where %}
  "where": {
    "and": [
      {% if branch %}
        {
          "eq": {
            "build.branch": "{{ branch }}"
          }
        },
      {% endif %}
      {% if platform %}
        {
          "eq": {
            "treeherder.machine.platform": "{{ platform }}"
          }
        },
      {% endif %}
      {
        "gt": {
          "run.stats.start_time": {
            "date": "{{ since }}"
          }
        }
      }{% if path %},
        {
          "prefix": {
            "result.test": "{{ path }}"
          }
        }
      {% endif %}
    ]
  },
{% endblock %}
